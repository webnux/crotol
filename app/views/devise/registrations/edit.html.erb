<div class="text-center">
  <%= image_tag("#{@cover}", height: '500', width: '650') %>
</div>
<hr>
<div class="text-center">
  <h1>Settings</h1>
</div>
<br><br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  
<%= devise_error_messages! %>

<div class="container"><!-- container -->

  <div class="row">

    <div class="col-md-8">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">Name</span>
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">Avatar</span>
            <%= f.text_field :avatar, class: 'form-control' %>
          </div>
      </div>

    <div class="col-md-4">
            <%= f.submit "Update my information", class: 'btn btn-info' %>
            <br><br>
            <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
    </div>

  </div> <!-- ROW 1 -->

</div> <!-- container -->

<% end %>

<br>
