<div class="container">
       
      <div class="row">
         <div class="text-center">
            <%= link_to 'New Question', new_post_path, class: "btn btn-success text-center" %>
         </div>
      </div>
   
      <br>
      <br>
   
      <div class="row" id="containme">
      
        <% @posts.each do |post| %>

        <div class="col-md-4 blog-main box text-center">

            <div class="panel panel-info">
              <div class="panel-heading">
                <h3 class="panel-title"><%= post.title %>  <%= image_tag(post.user.avatar, height: '25', width: '25', class: 'img-circle') %></h3>
                
              </div>
              <div class="panel-body">
                <i><%= raw(post.content_html) %></i>
                <br>
                <br>
                <div style="color: #3BB2D6;"><%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %></div>
                <br>

              <div class="btn-group" role="group" aria-label="...">
                <% if can? :update, post %>
                  <%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning" %>
                <% end %>
                <% if can? :destroy, post %>
                  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                <% end %>
              </div>

              <!-- Comments -->
              <% if post.comments.any? %>
              
                <h5>Answers</h5>
                
                <%= render post.comments %>

              <% end %>
              <!-- Comments -->

              <!-- Button trigger modal -->
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal<%= post.id %>">
                Add Answer
                </button>
                <br>
                <br>
                <br>
              <!-- Button trigger modal -->


              </div><!-- Panel Info -->
            </div><!-- Panel Info -->

              <!-- Modal -->
              <%= form_for([post, post.comments.build]) do |f| %>
              <div class="modal fade" id="myModal<%= post.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Answer</h4>
                  </div>
                  <div class="modal-body">

                    <div class="field">
                    <%= f.label :content %><br>
                    <%= f.text_area :content, class: "form-control" %>
                  </div>

                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <%= submit_tag "Add", class: "btn btn-primary" %>
                  </div>
                </div>
              </div>
              </div>
              <% end %>
              <!-- Modal -->
           
           
         
            </div><!-- /.blog-main -->
            
          
   
        <% end %>
        
       
        </div><!-- /.row -->

</div> <!-- Div container -->




